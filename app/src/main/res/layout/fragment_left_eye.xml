<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundnormal"
    tools:context=".views.datashow.contentfragment.LeftEyeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_click"
                    android:gravity="center"
                    android:text="近一周"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_click"
                    android:gravity="center"
                    android:text="近一个月"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_click"
                    android:gravity="center"
                    android:text="近半年"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_click"
                    android:gravity="center"
                    android:text="近一年"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="左眼视力数值统计" />

        <LinearLayout
            android:id="@+id/nearlweek_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:divider="@color/backgroundnormal"
                android:dividerHeight="5dp">

            </ListView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>