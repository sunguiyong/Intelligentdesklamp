<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundnormal"
    android:orientation="vertical"
    tools:context=".views.me.UpdatePwdActivity">

    <include layout="@layout/toolbar_updatepwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <EditText
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:hint="请输入旧密码"
            android:paddingLeft="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLineGray" />

        <EditText
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:hint="请输入新密码"
            android:paddingLeft="20dp" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Switch
                android:thumb="@drawable/thumpclick"
                android:track="@drawable/trackclick"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="显示密码"
                android:textColor="@color/btn_darkGray"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/zhuce_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_click"
            android:text="确认重置"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>